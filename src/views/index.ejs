<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Iniciar Sesión - Panel de Administración</title>
  <!-- Agrega el enlace al archivo CSS de Bootstrap -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <!-- Agrega tu archivo de estilos personalizados (opcional) -->
  <link rel="stylesheet" href="/css/estilos.css">
</head>
<body>
  
  <div class="container-fluid">
    <div class="row justify-content-center align-items-center min-vh-100">
      <div class="col-lg-4 col-md-6 col-sm-8">
        <div class="card shadow-lg">
          <div class="card-body p-5">
            <h2 class="text-center mb-4">Iniciar Sesión</h2>
            <form action="http://localhost:3000/api/auth/login" method="post" onsubmit="submitLoginForm(event)">
              <div class="form-group">
                <label for="username">Nombre de usuario o correo electrónico</label>
                <input type="text" class="form-control" id="user" required name="user">
              </div>
              <div class="form-group">
                <label for="password">Contraseña</label>
                <input type="password" class="form-control" id="pass" required name="pass">
              </div>
              <button type="submit" class="btn btn-primary btn-block mt-4">Iniciar Sesión</button>
            </form>
            
            <script>
              function submitLoginForm(event) {
                event.preventDefault(); // Evita que el formulario se envíe automáticamente
            
                // Obtener los valores del formulario
                const user = document.getElementById('user').value;
                const pass = document.getElementById('pass').value;
            
                // Aquí puedes realizar cualquier validación de los datos antes de enviarlos al servidor
            
                // Simular el envío del formulario al servidor (reemplaza esta línea con tu lógica de envío real)
                const loginData = { user, pass };
            
                // Simular una respuesta del servidor (reemplaza esta línea con la respuesta real del servidor)
                const response = { success: true }; // Si el inicio de sesión fue exitoso
            
                if (response.success) {
                  // Redireccionar a la ruta deseada
                  window.location.href = "http://localhost:3000/adminPanel/dashboard";
                } else {
                  // Aquí puedes manejar el caso en que el inicio de sesión no fue exitoso
                  // Por ejemplo, mostrar un mensaje de error en la página
                  console.log("Inicio de sesión fallido");
                }
              }
            </script>
            
            <div class="text-center mt-3">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
